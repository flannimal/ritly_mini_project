<%= link_to "New link", new_link_path %>    


<h1> RITLY </h1>

<% @links.each do |link| %>
    <li> 
    	<%= link_to link.url, link_path(link.id) %> 
    	<%= link.random_string %>
    	<%= link_to "edit", edit_link_path(link.id) %>
    	<%= link_to "delete", link, method: :delete, data: {confirm: "y/n?"} %>

    </li>

<% end %>